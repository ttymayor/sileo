{
	"name": "sileo",
	"version": "0.0.7",
	"description": "An opinionated, physics based toast notification library for react.",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/hiaaryan/sileo.git"
	},
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"default": "./dist/index.js"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "rm -rf dist && bunchee && cp src/sileo.css dist/styles.css",
		"dev": "bunchee --watch"
	},
	"peerDependencies": {
		"react": ">=18",
		"react-dom": ">=18",
		"lucide-react": ">=0.300"
	},
	"devDependencies": {
		"bunchee": "^6.9.4"
	}
}
